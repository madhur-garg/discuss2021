"""
Number Guesser Program

This is an example of how to use variables to 
keep track of information in a program that 
also makes use of loops
"""
import random

def main():
    scrt_num = random.randint(1, 100)
    guess = int(input("Is your number "))
    while scrt_num != guess:
        if guess>scrt_num:
            print("lower")
        elif guess<scrt_num:
            print("higher")
        guess = int(input("Is your number "))
    print("correct")

if __name__ == "__main__":
    main()
